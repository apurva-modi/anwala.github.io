	    $(document).ready(function(){
		    // HTML markup implementation, overlap mode, initilaize collapsed
		    $( '#menu' ).multilevelpushmenu({
		        collapsed: true,
		        fullCollapse: true,
		        backText: 'Retour',
		        swipe: 'both',
		        menuWidth: '250px',
		        preventItemClick: false
		    });
		});
		$( window ).resize(function() {
		    $( '#menu' ).multilevelpushmenu( 'redraw' );
		});

		// Full collapse
	    $( '#overlay' ).click(function(){
	        $( '#menu' ).multilevelpushmenu( 'collapse' );
	        if ( $(".blog-sidebar").is(":visible") && $("#menu-primary_navigation-1").is(":hidden") ) {
		        $(".blog-sidebar").animate({width:'toggle'},250);
		    }
	        $("#overlay").hide();
	    });

	    // Base expand
	    $( '#expand-button' ).click(function(){
	        if ( $(".blog-sidebar").is(":hidden") && $("#menu-primary_navigation-1").is(":hidden") ) {
				$( '#menu' ).multilevelpushmenu( 'expand' );
    			$("#overlay").show();
			}
	    });

	    $( '#expand-sidebar' ).click(function(){
	        if ( $(".blog-sidebar").is(":hidden") && $("#menu-primary_navigation-1").is(":hidden") ) {
				$(".blog-sidebar").animate({width:'toggle'},400);
				$("#overlay").show();
			} 
	    });

	    $("#menu-primary_navigation>li>ul.sub-menu").addClass("container")

	    $(document).ready(function(){
	    	$("#menu").show();

			if( !navigator.userAgent.match( /iPad/i ) & !navigator.userAgent.match( /iPhone/i ) & !navigator.userAgent.match( /iPod/i ) )
 			{
			    // HTML markup implementation, overlap mode, initilaize collapsed
			    $(document).on("touchstart",function(event) {
				    $("body").swipe( {
						//Generic swipe handler for all directions
						swipeRight:function(event, direction, distance, duration, fingerCount, fingerData) {
							if ( $(".blog-sidebar").is(":visible") ) {
								$(".blog-sidebar").animate({width:'toggle'},400);
								$("#overlay").hide();
							} else if ( $(".blog-sidebar").is(":hidden") && $("#menu-primary_navigation-1").is(":hidden") ) {
								$( '#menu' ).multilevelpushmenu( 'expand' );
			        			$("#overlay").show();
							}
							
						},
						swipeLeft:function(event, direction, distance, duration, fingerCount, fingerData) {
							if ( $(".blog-sidebar").is(":hidden") && $("#menu-primary_navigation-1").is(":hidden") ) {
								$(".blog-sidebar").animate({width:'toggle'},400);
								$("#overlay").show();
							} else if ( $(".blog-sidebar").is(":hidden") && $("#menu-primary_navigation-1").is(":visible") ) {
								$( '#menu' ).multilevelpushmenu( 'collapse' );
			        			$("#overlay").hide();
							}
						},

            $(function(){
                             window.kol_query_string = function(q) {
  return (function(a) {
   if (a == "") return {};
   var b = {};
   for (var i = 0; i < a.length; ++i) {
    var p = a[i].split('=');
    if (p.length != 2) continue;
    b[p[0]] = decodeURIComponent(p[1].replace(/\+/g, " "));
   }
   return b;
  })(q.split("&"));
}((window.location.search || '').substring(1));

                 window.is_kol_thankyou_page = false;
   window.redirect_anonymous_thankyou_requests = false;

   function get_data_for_lead(kolid) {
     var api_url = "https://leads.kickofflabs.com/lead/117087/" + kolid;
     $.ajax({
       url: api_url,
       dataType: 'JSON',
       timeout: 10000,
     }).done(function(lead){
         cookie_lead_id_if_necessary(lead.id)
         window.kol_lead = lead;
         $(document).trigger("kol:knownlead", lead);
     }).fail(function(jqXHR, textStatus, errorThrown){
       if (jqXHR.status == 404 && window.is_kol_thankyou_page) {
         thankyou_no_known_lead();
       } else {
         $(document).trigger('kol:unknownlead', 'https://join.hxro.io/beta');
         console.log("Lead API Request Failed: " + textStatus);
         console.log("ERROR", errorThrown);

       }
     });
   }

   function is_request_for_share_page(){
     return (get_kid_for_share_page() && $('.requires-current-lead').length > 0)
   }

   function get_kid_for_share_page() {
     return (window.kol_query_string && window.kol_query_string.kid) || $.cookie("kid.117087") || $.cookie('kola.117087.social_id')
   }

   function is_request_for_thankyou_page(){
     return get_kolid_for_thankyou_page() || window.is_kol_thankyou_page;
   }

   function get_kolid_for_thankyou_page() {
     return (window.kol_query_string && window.kol_query_string.kolid) || $.cookie("kolid.117087") || $.cookie("kola.117087.cid")
   }

   function cookie_lead_id_if_necessary(id) {
     if (window.kol_query_string) {
       if (window.kol_query_string.kid) {
         $.cookie("kid.117087", id, {expires:  1000, path: '/'});
       } else if (window.kol_query_string.kolid) {
         $.cookie("kolid.117087", id, {expires:  1000, path: '/'});
       }
     }
   }

   function thankyou_no_known_lead() {
     if (window.kol_query_string['preview'] == 'true') {
       if (window.KOLContestPreview != null){
         var kpb = new KOLContestPreview({url: "https://join.hxro.io/beta"});
       }

     } else {
       if ('https://join.hxro.io/beta'.length > 0 && !window.kol_query_string['redirect'] && window.redirect_anonymous_thankyou_requests) {
         if ('https://join.hxro.io/beta'.indexOf("?") > -1) {
           window.location = 'https://join.hxro.io/beta&redirect=true'
         } else {
           window.location = 'https://join.hxro.io/beta?redirect=true'
         }
       } else {
         $(document).trigger('kol:unknownlead', 'https://join.hxro.io/beta');
       }
     }
   }

   // Standard event for replacing data

   function replaceTextNodes(node, newText) {
     if (node.nodeType == 3) {
         // Filter out text nodes that contain only whitespace
         if (!/^ *$/.test(node.data)) {
             node.data = newText;
         }
     } else if (node.hasChildNodes()) {
         for (var i = 0, len = node.childNodes.length; i < len; ++i) {
             replaceTextNodes(node.childNodes[i], newText);
         }
     }
 }


   $(document).on('kol:knownlead', function(e, lead){

     $('[data-replace-with-lead-data]').each(function(){

       replaceTextNodes(this, lead[$(this).data('replace-with-lead-data')].toLocaleString());

     });
  });

   if (window.kol_lead) {
       $(document).trigger("kol:knownlead", window.kol_lead);
   } else if (is_request_for_share_page()) {
     var kid = get_kid_for_share_page();
     get_data_for_lead(kid);
   } else if (is_request_for_thankyou_page()) {
     var kolid = get_kolid_for_thankyou_page();
     if (kolid) {
       get_data_for_lead(kolid);
     } else {
       thankyou_no_known_lead();
     }
   } else {
     $(document).trigger('kol:unknownlead', 'https://join.hxro.io/beta');
   }




            });

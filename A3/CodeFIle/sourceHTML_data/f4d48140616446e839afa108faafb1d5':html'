                    }
                }
	            function anp(e){
	            	var n=1;
	            	var $i=$("<b>").text("+"+n);
	            	var x=e.pageX,y=e.pageY;
	            	$i.css({top:y-20,left:x,position:"absolute",color:"#E94F06"});
	            	$("body").append($i);
	            	$i.animate({top:y-180,opacity:0,"font-size":"1.4em"},1500,function(){
	            		$i.remove();
	            	});
	            	e.stopPropagation();
	            }
                </script>

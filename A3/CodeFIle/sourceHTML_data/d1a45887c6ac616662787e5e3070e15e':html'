	var mod_fullvideoplayer = false;
	function playFullVideo(){
		jQuery('#mod_fullvideoplayer_224_div').show();
		jQuery('#mod_fullvideoplayer_224_playbutton').hide();
		mod_fullvideoplayer.fullscreen.enter();
		mod_fullvideoplayer.play();
	}
	jQuery(document).ready(function(){
		mod_fullvideoplayer = new Plyr('#mod_fullvideoplayer_224');
		
		mod_fullvideoplayer.on('exitfullscreen', event => {
			jQuery('#mod_fullvideoplayer_224_div').hide();
			jQuery('#mod_fullvideoplayer_224_playbutton').show();
			mod_fullvideoplayer.pause();
		});
		
	});

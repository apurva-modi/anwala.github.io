<script>

    $(document).ready(function () {
        $('.newsletter-form').parsley().on('form:submit', function () {
            subscribeSend();
            return false; // Don't submit form for this demo
        });
    });

    function subscribeSend() {
        $.ajax({
            type: 'POST',
            url: "https://glad.network/subscribe",
            data: {"email": $(".newsletter-form > .newsletter-form-inputs > input").val()},
            success: function (res) {
                console.log(res);
                if (res == "success") {
                    $(".newsletter-form .newsletter-form-inputs").hide();
                    $(".newsletter-form .contact-form-success").show();
                }
                else {

                    $(".newsletter-form .newsletter-form-inputs").hide();
                    // $(".newsletter-form .contact-form-fail").show();
                    $(".newsletter-form .contact-form-fail").html(res).show();
                }
            }
        });
    }

</script>

<script type="text/javascript">
    $(function () {
        new Fingerprint2().get(function (token, components) {
            $.ajax({
                type: 'POST',
                url: "https://glad.network/pageToken",
                data: {token: token},
                success: function (result) {

                },
                error: function (result) {

                }
            });
        });
    });
</script>


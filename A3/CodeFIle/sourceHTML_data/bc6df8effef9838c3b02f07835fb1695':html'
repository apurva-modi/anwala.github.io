<!-- Play video onload -->
<script type="text/javascript">
    $(document).ready(function(){
        var gladvideo = document.getElementById("airdrop-video");
        $("#videoModalButton").click(function() {
            gladvideo.load();
            gladvideo.play();
        });
        // $("#videoModalButton").click();
        $("#videoModalCloseButton").click(function() {
            gladvideo.pause();
        });
        $(document).keyup(function(e) {
            if (e.keyCode == 27) {
                gladvideo.pause();
            }
        });
        $(window).click(function() {
            gladvideo.pause();
        });
        $('#airdrop-video').click(function(event){
            event.stopPropagation();
        });
    });
</script>

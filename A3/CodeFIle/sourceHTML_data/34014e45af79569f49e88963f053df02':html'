  <script>
    (function () {

      var sendingForm = {
        sendData: function (event) {
          event.preventDefault();
          var form = this;
          // console.log(this.client.value);



          var data = {
            client: this.client.value,
            email: this.email.value,
            message: this.message.value
          }

          console.log(data);

          if (data.client == "" || data.email == "" || data.message == "") {
            item = document.getElementById('message-box').className = "overlay show";
            document.getElementById('message-box-text').innerHTML = "Please Complete the Form";
            return false;
          }
          var XHR = new XMLHttpRequest();
          var FD = new FormData();

          // Push our data into our FormData object
          for (name in data) {
            console.log(data[name]);
            FD.append(name, data[name]);
          }

          // Define what happens on successful data submission
          XHR.addEventListener('load', (event) => {
            this.reset();
            item = document.getElementById('message-box').className = "overlay show";
            document.getElementById('message-box-text').innerHTML = JSON.parse(event.target.responseText).message;
            console.log(event);
          });

          // Define what happens in case of error
          XHR.addEventListener('error', function (event) {
            alert('Oops! Something went wrong.');
          });

          // Set up our request
          XHR.open('POST', './contact.php');

          // Send our FormData object; HTTP headers are set automatically
          XHR.send(FD);
        },

        subscribe(event){
          event.preventDefault();
          var form = this;

          console.log(this);
          
          var data = {
            email: this.email.value,
          }
          var XHR = new XMLHttpRequest();
          var FD = new FormData();

          // Push our data into our FormData object
          for (name in data) {
            console.log(data[name]);
            FD.append(name, data[name]);
          }

          // Define what happens on successful data submission
          XHR.addEventListener('load', (event) => {
            this.reset();
            item = document.getElementById('message-box').className = "overlay show";
            document.getElementById('message-box-text').innerHTML = JSON.parse(event.target.responseText).message;
            console.log(event);
          });

          // Define what happens in case of error
          XHR.addEventListener('error', function (event) {
            alert('Oops! Something went wrong.');
          });

          // Set up our request
          XHR.open('POST', './subscribe.php');

          // Send our FormData object; HTTP headers are set automatically
          XHR.send(FD);
        }
      }

      var cf = document.getElementById("contact-form");
      cf.onsubmit = sendingForm.sendData;
      var s = document.getElementById("subscribe");
      s.onsubmit = sendingForm.subscribe;

      var m_ok = document.getElementById('message-ok');

      m_ok.onclick = function () {
        item = document.getElementById('message-box').className = "overlay";
      }


      $('[data-link]').on('click', function () {
        window.open($(this).data('link'));
      });


    })();
  </script>

</body>


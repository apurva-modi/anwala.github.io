        $(function () {

            function preHeaderLogic() {

                // Find height for #pre-header div
                var preHeaderHeight = 0;
                if ($('#pre-header').length > 0) {
                    preHeaderHeight = $('#pre-header').outerHeight();
                }

                // Find top for #js-header div
                var jsHeaderTop = null;
                if ($('#js-header').length > 0) {
                    jsHeaderTop = $('#js-header').offset().top;
                }

                // If #pre-header is empty, make #js-header sticky.
                // If #pre-header contains something (height>0), make
                // #js-header sticky only after the user scrolls down
                // enough to get the #pre-header out of view.
                $('#js-header').removeClass('u-header--sticky-top');
                $('#first-section').removeClass('g-pt-50');
                if (preHeaderHeight == 0
                    || (preHeaderHeight > 0 && $(window).scrollTop() > preHeaderHeight)) {
                    $('#js-header').addClass('u-header--sticky-top');
                    $('#first-section').addClass('g-pt-50');
                }
            }

            // Apply logic every time the user scrolls
            $(window).scroll(function(){
                preHeaderLogic();
            });

            // Apply logic a few times on page load, basically
            // to work around the external ad loading which
            // might take a few seconds to complete
            var intervalCount = 0;
            preHeaderInterval = setInterval(function(){
                preHeaderLogic();
                if (++intervalCount > 20) {
                    clearInterval(preHeaderInterval);
                }
            }, 500);
        });
    </script>

    <script>
        window.twttr = (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0],
                t = window.twttr || {};
            if (d.getElementById(id)) return t;
            js = d.createElement(s);
            js.id = id;
            js.src = "https://platform.twitter.com/widgets.js";
            fjs.parentNode.insertBefore(js, fjs);

            t._e = [];
            t.ready = function (f) {
                t._e.push(f);
            };

            return t;
        }(document, "script", "twitter-wjs"));
    </script>
    
<!-- Open external links in new window -->
<script>
    $('.article-body > div a').each(function() {
        var a = new RegExp('/' + window.location.host + '/');
        if(!a.test(this.href)) {
            $(this).click(function(event) {
                event.preventDefault();
                event.stopPropagation();
                window.open(this.href, '_blank');
            });
        }
    });
 </script>


 <!-- infinite scroll -->
 <script>
        function makewaypoints(uri, title, slug){
        var waypoint = new Waypoint({
            element: document.getElementById(slug),
            handler: function(direction) {
                window.history.replaceState('', '', uri);
                document.title = title
                try {
                    addthis.layers.refresh();
                }
                catch (e) {
                    console.log('add this not initilized');
                }
            },
            offset: 'bottom-in-view'
        })
        var waypoint2 = new Waypoint({
            element: document.getElementById(slug),
            handler: function(direction) {
                window.history.replaceState('', '', uri);
                document.title = title
                try {
                    addthis.layers.refresh();
                }
                catch (e) {
                    console.log('add this not initilized');
                }
            },
        })
    }
    //set waypoints for initial article
    $items = $('.article-body')[0]
    var uri = $items.children[0].textContent
    var title = $items.children[1].textContent
    var slug = $items.children[2].textContent
    makewaypoints(uri, title, slug)

    //initilize infinite scroll
    var infinite = new Waypoint.Infinite({
            element: $('.infinite-container')[0],
            onBeforePageLoad: function () {
                $('.loading').show();
            },
            onAfterPageLoad: function ($items) {
                $('.loading').hide();
                var uri = $items[0].children[0].children[0].textContent
                var title = $items[0].children[0].children[1].textContent
                var slug = $items[0].children[0].children[2].textContent
                makewaypoints(uri, title, slug)
                //send ga event
                addthis.layers.refresh();

                if ("ga" in window) {
                    tracker = ga.getAll()[0];
                    if (tracker)
                        tracker.set("page", uri);
                        tracker.send("event", "Scroll Pageview", uri);
                        tracker.send("pageview");
                }
            }
        });
</script>
<!-- end infinite scroll -->

 
